<% if user_signed_in? %>
    <h2>Hello <%= current_user.username || current_user.email.remove("@gmail.com") %></h2>
<% end %>

<br>

<h2>Here are all of the games. Click on one to see reviews!</h2>


<div id="games">
</div>

<% if @games.any? %>
    <p><%= link_to 'See top rated reviews!', reviews_descending_order_path %></p>
<% end %>

<button id="see_more_games_button">See More Games</button>

<p><%= button_to 'Create New Game', new_game_path, method: :get %></p>