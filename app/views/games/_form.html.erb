<%= form_for @game do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, :class => 'nes-textarea' %><br>
    <br>
    <%= f.label :description %>
    <%= f.text_area :description, :class => 'nes-textarea'%><br>
    <br>
    <%= f.submit %>
<% end %>

<% if @game.errors.any? %>
    <h3>
        <%= pluralize(@game.errors.count, "error") %>
        prohibited this post from being saved:
    </h3>

    <ul>
        <% @game.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>
