<%= form_for review do |f| %>
    <%= f.hidden_field :game_id %>
    <%= f.hidden_field :user_id, :class => 'nes-textarea' %>

    <%= f.label :title %>
    <%= f.text_field :title, :class => 'nes-textarea' %> <br>
    <br>
    <%= f.label :content %>
    <%= f.text_area :content, :class => 'nes-textarea' %> <br>
    <br>
    <%= f.label :score %>
    <%= f.select :score, (1..10), :class => 'nes-textarea' %> <br>
    <br>
    <%= f.submit %>
<% end %>